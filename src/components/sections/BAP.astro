---
import BundlesCards from "../cards/bundlesCards.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";
import { bundles } from "../../utils/bundles";


type BundlesCardsProps = {
    title: string;
    description: string;
    icon: string
    people: string
    price: string
};


---

<section id="services">
    <Container className="space-y-10 md:sapce-y-12">
        <div class="text-center max-w-3xl mx-auto space-y-4">
            <Title>
                Los paquetes que tenemos disponibles
            </Title>
            <Paragraph>
                El mejor precio y servicio
            </Paragraph>
        </div>
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            {
                    bundles.map((bundlesCards: BundlesCardsProps) => {
                    return (
                            <BundlesCards title={bundlesCards.title} description={bundlesCards.description} icon={bundlesCards.icon} people={bundlesCards.people} price={bundlesCards.price}>
                            </BundlesCards>
                            );
                    })
            }
        </div>
    </Container>
</section>