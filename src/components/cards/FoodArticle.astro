---
export interface Props {
    image: string,
    name: string,
    price: string,
}

const { image, name, price } = Astro.props
---
<article class=" m-5 relative min-w-[200px] border-yellow-300 hover:border-yellow-200 flex flex-col items-center overflow-hidden rounded-xl border bg-slate-800/50 w-full h-64 transition hover:bg-slate-800/75 hover:shadow-lg group">
    <div class="w-full h-1/2 pb-4">
        <img src={ image } alt="combo" class="h-full w-full">
    </div>
    <h2 class=" text-white transition group-hover:scale-110">{ name }</h2>
    <p class=" text-white transition group-hover:scale-110">{ price }</p>
</article>