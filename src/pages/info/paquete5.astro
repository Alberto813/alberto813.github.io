---
import Layout from '../../layouts/Layout.astro';
import { bundles } from '../../utils/bundles';
import BundleDescription from '../../components/sections/BundleDescription.astro';

type BundleProps = {
    title:string
    description: string;
    itemsIncluded: string;
    icon: string;
    people: string;
    price: string
}
const bundle = bundles[4];
---

<Layout title=`${bundle.title.toLocaleUpperCase()}` >
    <BundleDescription title={bundle.title} description={bundle.description}/>
</Layout>